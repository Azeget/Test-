
holidays = {
    "01.01": "–ù–æ–≤—ã–π –≥–æ–¥",
    "07.01": "–†–æ–∂–¥–µ—Å—Ç–≤–æ",
    "14.02": "–î–µ–Ω—å –°–≤—è—Ç–æ–≥–æ –í–∞–ª–µ–Ω—Ç–∏–Ω–∞",
    "08.03": "–ú–µ–∂–¥—É–Ω–∞—Ä–æ–¥–Ω—ã–π –∂–µ–Ω—Å–∫–∏–π –¥–µ–Ω—å",
    # –¥–æ–±–∞–≤—å—Ç–µ —Å—é–¥–∞ –æ—Å—Ç–∞–ª—å–Ω—ã–µ –ø—Ä–∞–∑–¥–Ω–∏–∫–∏
}

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã–≤–æ–¥–∞ –≤—Å–µ—Ö –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–≤ –Ω–∞ –¥–∞–Ω–Ω—ã–π –¥–µ–Ω—å
def get_holidays_today():
    today = datetime.date.today().strftime("%d.%m")
    result = "‚ú®–ü—Ä–∞–∑–¥–Ω–∏–∫–∏ –Ω–∞ —Å–µ–≥–æ–¥–Ω—è‚ú®\n"
    count = 1
    for date, holiday in holidays.items():
        if date == today:
            result += f"{count}. {holiday}\n"
            count += 1
    if count == 1:
        result += "–ù–∞ —Å–µ–≥–æ–¥–Ω—è –Ω–µ—Ç –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–≤"
    return result

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –¥–æ–±–∞–≤–ª–µ–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏—Ö –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–≤
def add_user_holiday(date):
    holidays[date] = "–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏–π –ø—Ä–∞–∑–¥–Ω–∏–∫"

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–æ–≥–æ –ø—Ä–∞–∑–¥–Ω–∏–∫–∞ –ø–æ –Ω–æ–º–µ—Ä—É
def remove_user_holiday(index):
    if index < 1 or index > len(holidays):
        return "–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –Ω–æ–º–µ—Ä –ø—Ä–∞–∑–¥–Ω–∏–∫–∞"
    holidays.pop(list(holidays.keys())[index-1])
    return "–ü—Ä–∞–∑–¥–Ω–∏–∫ —É–¥–∞–ª–µ–Ω —É—Å–ø–µ—à–Ω–æ"

# –§—É–Ω–∫—Ü–∏—è –¥–ª—è –≤—ã–≤–æ–¥–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å—Å–∫–∏—Ö –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–≤
def get_user_holidays():
    today = datetime.date.today()
    result = "üéÜ–í–∞—à–∏ –ø—Ä–∞–∑–¥–Ω–∏–∫–∏üéÜ\n"
    count = 1
    for date, holiday in holidays.items():
        holiday_date = datetime.datetime.strptime(date, "%d.%m").replace(year=today.year)
        days_left = (holiday_date - today).days
        result += f"{count}. {holiday} –¥–æ –Ω–µ–≥–æ –æ—Å—Ç–∞–ª–æ—Å—å {days_left} –¥–Ω–µ–π\n"
        count += 1
    if count == 1:
        result += "–£ –≤–∞—Å –Ω–µ—Ç –ø—Ä–∞–∑–¥–Ω–∏–∫–æ–≤"
    return result

# –ü—Ä–∏–º–µ—Ä –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è

prefix = ".–ª"

command = ".–ª –ø—Ä–∞–∑–¥–Ω–∏–∫–∏"

if command == prefix + "–ø—Ä–∞–∑–¥–Ω–∏–∫–∏":
    print(get_holidays_today())

elif command.startswith(prefix + "+–º–ø—Ä"):
    parts = command.split()
    if len(parts) != 2:
        print("–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –∫–æ–º–∞–Ω–¥—ã")
    else:
        date = parts[1]
        add_user_holiday(date)
        print("–ü—Ä–∞–∑–¥–Ω–∏–∫ –¥–æ–±–∞–≤–ª–µ–Ω —É—Å–ø–µ—à–Ω–æ")

elif command == prefix + "-–º–ø—Ä":
    print("–£–∫–∞–∂–∏—Ç–µ –Ω–æ–º–µ—Ä –ø—Ä–∞–∑–¥–Ω–∏–∫–∞ –¥–ª—è —É–¥–∞–ª–µ–Ω–∏—è")

elif command.startswith(prefix + "-–º–ø—Ä"):
    parts = command.split()
    if len(parts) != 2:
        print("–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –∫–æ–º–∞–Ω–¥—ã")
    else:
        try:
            index = int(parts[1])
            print(remove_user_holiday(index))
        except ValueError:
            print("–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π –Ω–æ–º–µ—Ä –ø—Ä–∞–∑–¥–Ω–∏–∫–∞")

elif command == prefix + "–º–ø—Ä–∞–∑–¥–Ω–∏–∫–∏":
    print(get_user_holidays())


#–ü—Ä–∏–º–µ—á–∞–Ω–∏—è:
#- –î–∞–Ω–Ω—ã–π –∫–æ–¥ –ø—Ä–µ–¥–ø–æ–ª–∞–≥–∞–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –≤ —Ç–µ–∫—Å—Ç–æ–≤–æ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–µ, –≥–¥–µ `command` - —ç—Ç–æ –∫–æ–º–∞–Ω–¥–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è.
#- –î–ª—è –±–æ–ª–µ–µ —É–¥–æ–±–Ω–æ–≥–æ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏—è –º–æ–∂–Ω–æ —Ä–µ–∞–ª–∏–∑–æ–≤–∞—Ç—å –¥–∞–Ω–Ω—ã–π —Ñ—É–Ω–∫—Ü–∏–æ–Ω–∞–ª —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º –±–∏–±–ª–∏–æ—Ç–µ–∫–∏ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è –±–æ—Ç–æ–≤, –Ω–∞–ø—Ä–∏–º–µ—Ä, `python-telegram-bot`. –í —ç—Ç–æ–º —Å–ª—É—á–∞–µ –Ω—É–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –∫–æ–¥ –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ –∫–æ–º–∞–Ω–¥ –∏ –æ—Ç–ø—Ä–∞–≤–∫–∏ —Å–æ–æ–±—â–µ–Ω–∏–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—é. 
